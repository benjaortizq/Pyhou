from math import sin, cos
class Bullet : 
    def __init__(self, x,y,speed,angle, texture ) : 
        self.x = x
        self.y = y
        self.speed = speed
        self.angle = angle  
        self.texture = texture 
    def update(self):
        # Update bullet position based on speed and angle
        self.x += self.speed * cos(self.angle)
        self.y += self.speed * sin(self.angle)
        if self.x < 0 or self.x > 800 or self.y < 0 or self.y > 600:
            self.remove_bullet()
        # Add logic to remove bullet if it goes out of bounds or hits a target
    def remove_bullet(self):
        # Logic to remove bullet from the game
        pass